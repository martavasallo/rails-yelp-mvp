<div class="container mt-5">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @restaurant.name %></h5>
      <h6 class="card-subtitle mb-2 text-body-secondary"><%= @restaurant.category %></h6>
      <p class="card-text"><%= @restaurant.address %></p>
      <hr>
      <p class="card-text"><%= @restaurant.phone_number %></p>
      <%# <a href="#" class="card-link">Card link</a>
      <a href="#" class="card-link">Another link</a> %>
    </div>
  </div>
  <p class="my-3"><%= link_to "< Back", restaurants_path %></p>
  <div class="row">
    <h3 class="mt-3">Reviews</h3>
    <%= link_to "Add new Review", new_restaurant_review_path(@restaurant) %>
  </div>
  <hr>
  <div class="row mx-1">
    <% @restaurant.reviews.each do |review| %>
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title"><%= review.rating%>/5</h5>
        <hr>
        <p class="card-text"><%= review.content %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>






